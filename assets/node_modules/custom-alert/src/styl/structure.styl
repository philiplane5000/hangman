#customalert-overlay, #customconfirm-overlay
  display none
  opacity 0.5
  position fixed
  top 0px
  left 0px
  width 100vw
  height 100vh
  z-index 2147483647
  background $backgroundOverlay

.customalert
  background-color $background
  if $bootstrap == false
    font-family $fontFamily
  border-radius $borderRadius
  width $width
  if $bootstrap == false
    font-size $fontSize
  display none
  position fixed
  max-width 100vw
  max-height 100vh
  z-index 2147483647
  top 5%
  @media (min-width: 321px)
    top 25%
    left 50%
    padding 10px
  box-shadow: 0 0 10px 0 rgba(0 0 0 0.3)
  -webkit-box-shadow: 0 0 10px 0 rgba(0 0 0 0.3)
  margin-left ($width / 2) * -1;
  @media (max-width: $width)
    margin-left (100vw / 2) * -1;

  .header, .body, .footer
    text-align center
    background $background
  .header
    font-size 0.75em

  .body
    padding 10px
    font-size 1.2em

  if $bootstrap == false
    .footer
      button
        margin-top 5px
        margin-bottom 5px
        width 100px
        padding 5px
        word-wrap break-word
        font-family $fontFamily
        border none

  if $bootstrap == false
    &.customalert-alert
        .footer
          .button-done
            $buttonsColors($alertColorButton, $alertBackgroundButton)

  &.customalert-confirm
    .footer
      button
        &.button-done
          margin-left 10px

          if $bootstrap == false
            background-color $confirmBackgroundButtonTrue
            color $confirmColorButtonTrue

            &:hover
              background-color lightness($confirmColorButtonTrue, 40%)
              color lightness($confirmColorButtonTrue, 90%)

        if $bootstrap == false
          &.button-cancel
            background-color $confirmBackgroundButtonFalse
            color $confirmColorButtonFalse

            &:hover
              background-color lightness($confirmColorButtonFalse, 40%)
              color lightness($confirmColorButtonFalse, 90%)